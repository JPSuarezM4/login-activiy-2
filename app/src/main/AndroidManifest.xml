<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ps.dbloginuser">

    <!-- Definición de actividades -->

    <!-- Actividad de inicio (Launcher) - SplashActivity -->
    <activity
        android:name=".SplashActivity"
        android:label="My App Splash"
        android:theme="@style/AppTheme.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Actividad de inicio de sesión - LoginActivity -->
    <activity
        android:name=".LoginActivity"
        android:label="Login"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>

    <!-- Actividad del menú de usuario - MenuUsuarioActivity -->
    <activity
        android:name=".MenuUsuarioActivity"
        android:label="Menú de Usuario"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>

    <!-- Otras configuraciones y permisos -->

</manifest>
